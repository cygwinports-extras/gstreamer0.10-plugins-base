GST_PLUGINS_EXT="cdparanoia gnome_vfs libvisual ogg pango theora vorbis ximage"
inherit gst-plugins

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS="base devel"
PKG_LISTS="base"
PKG_CONTENTS[0]= # base.list
PKG_CONTENTS[1]='usr/include/ usr/lib/lib* usr/lib/pkgconfig/ usr/share/gtk-doc/'

n=2
for ext in ${GST_PLUGINS_EXT}
do
	PKG_NAMES+=" ${PN%-base}-${ext}"
	PKG_HINTS+=" ${ext}"
	PKG_CONTENTS[$((n++))]="${GST_PLUGINDIR#/}/*gst${ext//_/}*"
done
unset ext n
